@import 'variables';

.sure-sites
    .toggle-layer
        padding-top 8px
        padding-bottom 8px
        padding-left 55px
        border-bottom solid 1px $broadband-sure-sites_secondary
        img
            height 35px
    ul.indent
        margin-left 15px
    .group>ul>ul>label
        margin-bottom 0
        margin-top 5px
    .slider
        width 235px
        margin-left 8px
        margin-right 8px
    .slider-container
        margin-right 15px
        padding-bottom 15px

.map .esriPopup
